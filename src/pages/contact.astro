---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact MW Brady Law - Free Consultation"
  description="Contact MW Brady Law for your free consultation. Serving Frankfort and Crete, IL with expert legal services."
  keywords={["contact", "consultation", "law firm", "attorney", "Frankfort IL", "Crete IL"]}
>
  <section class="contact-hero">
    <div class="container">
      <h1>Contact Us</h1>
      <p>Ready to discuss your legal needs? Contact MW Brady Law today for your free consultation.</p>
    </div>
  </section>

  <section class="contact-content">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-section">
          <h2>Send Us a Message</h2>
          <form class="contact-form" action="https://formspree.io/f/xpwzgkqr" method="POST">
            <div class="form-group">
              <label for="name">Full Name *</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email Address *</label>
              <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="phone">Phone Number</label>
              <input type="tel" id="phone" name="phone">
            </div>
            
            <div class="form-group">
              <label for="practice-area">Practice Area</label>
              <select id="practice-area" name="practice-area">
                <option value="">Select a practice area</option>
                <option value="estate-planning">Estate Planning</option>
                <option value="real-estate">Real Estate Law</option>
                <option value="small-business">Small Business/Corporate Law</option>
                <option value="guardianship-probate">Guardianships/Probate/Trust Administration</option>
                <option value="litigation">Litigation</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Message *</label>
              <textarea id="message" name="message" rows="5" required placeholder="Please describe your legal needs..."></textarea>
            </div>
            
            <!-- Hidden field for form identification -->
            <input type="hidden" name="_subject" value="New Contact Form Submission - MW Brady Law">
            <input type="hidden" name="_next" value="https://www.mwbradylaw.com/thank-you">
            
            <button type="submit" class="submit-btn">Send Message</button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="contact-info-section">
          <h2>Get in Touch</h2>
          
          <div class="contact-info">
            <div class="contact-item">
              <h3>Phone</h3>
              <p><a href="tel:708-532-3655">708-532-3655</a></p>
            </div>
            
            <div class="contact-item">
              <h3>Fax</h3>
              <p>708-856-8572</p>
            </div>
            
            <div class="contact-item">
              <h3>Email</h3>
              <p><a href="mailto:info@mwbradylaw.com">info@mwbradylaw.com</a></p>
            </div>
          </div>

          <div class="office-locations">
            <div class="office">
              <h3>Frankfort Office</h3>
              <address>
                20950 S Frankfort Square Rd<br>
                Unit B<br>
                Frankfort, IL 60423
              </address>
            </div>
            
            <div class="office">
              <h3>Crete Office</h3>
              <address>
                525 W Exchange St<br>
                Crete, IL 60417<br>
                <em>Historical Building</em>
              </address>
            </div>
          </div>

          <div class="business-hours">
            <h3>Business Hours</h3>
            <p>Monday - Friday: 9:00 AM - 5:00 PM<br>
            Saturday & Sunday: By Appointment</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="map-section">
    <div class="container">
      <h2>Our Locations</h2>
      <div class="maps-grid">
        <div class="map-item">
          <h3>Frankfort Office</h3>
          <div class="map-placeholder">
            <p>Interactive map for Frankfort office will be embedded here</p>
            <p>20950 S Frankfort Square Rd, Unit B, Frankfort, IL 60423</p>
          </div>
        </div>
        
        <div class="map-item">
          <h3>Crete Office</h3>
          <div class="map-placeholder">
            <p>Interactive map for Crete office will be embedded here</p>
            <p>525 W Exchange St, Crete, IL 60417</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .contact-hero {
    background: linear-gradient(135deg, #8B5A3C 0%, #6D4530 100%);
    color: white;
    padding: 4rem 0;
    text-align: center;
  }
  
  .contact-hero h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .contact-hero p {
    font-size: 1.25rem;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .contact-content {
    padding: 5rem 0;
  }
  
  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }
  
  .contact-form-section h2,
  .contact-info-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: #2C2C2C;
  }
  
  /* Contact Form Styles */
  .contact-form {
    background: #f8f9fa;
    padding: 2rem;
    border-radius: 10px;
  }
  
  .form-group {
    margin-bottom: 1.5rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: #333;
  }
  
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }
  
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #8B5A3C;
  }
  
  .submit-btn {
    background: #8B5A3C;
    color: white;
    padding: 1rem 2rem;
    border: none;
    border-radius: 5px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.3s ease;
    width: 100%;
  }
  
  .submit-btn:hover {
    background: #6D4530;
  }
  
  /* Contact Info Styles */
  .contact-info {
    margin-bottom: 3rem;
  }
  
  .contact-item {
    margin-bottom: 2rem;
  }
  
  .contact-item h3 {
    color: #8B5A3C;
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }
  
  .contact-item p {
    font-size: 1.1rem;
  }
  
  .contact-item a {
    color: #333;
    text-decoration: none;
  }
  
  .contact-item a:hover {
    color: #8B5A3C;
  }
  
  .office-locations {
    margin-bottom: 3rem;
  }
  
  .office {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 10px;
  }
  
  .office h3 {
    color: #8B5A3C;
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }
  
  .office address {
    font-style: normal;
    line-height: 1.6;
    color: #555;
  }
  
  .business-hours {
    padding: 1.5rem;
    background: #8B5A3C;
    color: white;
    border-radius: 10px;
  }
  
  .business-hours h3 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }
  
  /* Map Section */
  .map-section {
    padding: 5rem 0;
    background: #f8f9fa;
  }
  
  .map-section h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: #2C2C2C;
  }
  
  .maps-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
  }
  
  .map-item h3 {
    text-align: center;
    margin-bottom: 1rem;
    color: #8B5A3C;
    font-size: 1.5rem;
  }
  
  .map-placeholder {
    background: white;
    padding: 3rem;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    min-height: 300px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  .map-placeholder p {
    color: #666;
    margin-bottom: 1rem;
  }
  
  /* Responsive Design */
  @media (max-width: 768px) {
    .contact-hero h1 {
      font-size: 2rem;
    }
    
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
    
    .maps-grid {
      grid-template-columns: 1fr;
    }
    
    .contact-form {
      padding: 1.5rem;
    }
  }
</style>

