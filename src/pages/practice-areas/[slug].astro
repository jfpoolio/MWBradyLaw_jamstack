---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const practiceAreas = await getCollection('practice-areas');
  return practiceAreas.map((area) => ({
    params: { slug: area.data.slug },
    props: { area },
  }));
}

const { area } = Astro.props;
const { Content } = await area.render();
---

<BaseLayout title={area.data.seo?.title || `${area.data.title} - MW Brady Law`} description={area.data.seo?.description || area.data.description}>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 mb-8">{area.data.title}</h1>
      
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
      
      <div class="mt-12 bg-blue-50 rounded-lg p-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Need Help with {area.data.title}?</h2>
        <p class="text-gray-600 mb-6">Contact MW Brady Law today to discuss your legal needs.</p>
        <a href="/contact" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors">
          Contact Us Today
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
